    .container
      h2.title-h2 Наши контакты
      .wrapper
        .contact-wrap
          .contact
            .contact__img
              img alt="" src=asset_url("site/egor.png")
            .contact__title Общие вопросы
            a (
              href=""
              onclick="window.location.href = 'mailto:sup'+'po'+'rt@'+'gettable.ru';"
              itemprop="email"
            ) support@gettable.ru
            span itemprop="telephone" +7 (495) 255-09-08
          .contact
            .contact__img
              img alt="" src=asset_url("site/vit2.png")
            .contact__title Отдел продаж
            a href="" onclick="window.location.href = 'mailto:sa'+'le'+'s@'+'gettable.ru';" sales@gettable.ru
            span +7 (495) 966-38-48
          .contact
            .contact__img
              img alt="" src=asset_url("site/vas1.png")
            .contact__title Финансовый отдел
            a href="" onclick="window.location.href = 'mailto:f'+'i'+'n@'+'gettable.ru';" fin@gettable.ru
            span +7 (495) 255-11-81
